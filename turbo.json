{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "globalEnv": [
    "NEXT_PUBLIC_API_SERVER_URL",
    "INTANIA_AUTH_APP_ID",
    "INTANIA_AUTH_REDIRECT_URL",
    "JWT_SECRET",
    "NODE_ENV"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "env": [
        "NEXT_PUBLIC_API_SERVER_URL",
        "INTANIA_AUTH_APP_ID",
        "INTANIA_AUTH_REDIRECT_URL",
        "JWT_SECRET",
        "NODE_ENV"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
