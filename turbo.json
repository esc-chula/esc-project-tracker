{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "API_SERVER_URL",
    "JWT_SECRET",
    "DATABASE_URL",
    "INTANIA_AUTH_URL",
    "INTANIA_AUTH_APP_ID",
    "INTANIA_AUTH_SECRET",
    "INTANIA_AUTH_REDIRECT_URL",
    "NEXT_PUBLIC_API_SERVER_URL",
    "NODE_ENV"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
